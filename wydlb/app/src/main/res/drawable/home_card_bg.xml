<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle">
	<!--分別對應上面左圆角的半径，上面右圆角的半径，下面左圆角的半径，下面右圆角的半径-->
	<corners
		android:topLeftRadius="5.33dp"
		android:topRightRadius="5.33dp"
		android:bottomLeftRadius="5.33dp"
		android:bottomRightRadius="5.33dp"/>
	<!--設置漸變-->
	<gradient android:startColor="#669CEB"
		android:endColor="#817FFF"
		android:angle="45"/>
	<stroke
		android:width="1dp"
		android:color="#ffffff" />
</shape>