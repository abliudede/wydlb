<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<!--Common-->
	<style name="ReadTextAppearance.Common"/>
	<style name="ReadTextAppearance.Common.SingleLine">
		<item name="android:singleLine">true</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<!--表示领域-->
	<style name="ReadTextAppearance.Billboard"/>
	<style name="ReadTextAppearance.Billboard.Title">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">10dp</item>
	</style>
	
	<!--书籍-->
	<style name="ReadTextAppearance.Book"/>
	<style name="ReadTextAppearance.Book.Name">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:ellipsize">end</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">16sp</item>
	</style>
	
	<!--ReadActivity-->
	<style name="ReadTextAppearance.Read"></style>
	<style name="ReadTextAppearance.Read.TopMenu">
		<item name="android:layout_width">50dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/nb.read.menu.text</item>
	</style>
	<style name="ReadTextAppearance.Read.BottomMenu">
		<item name="android:textColor">@color/nb.read.menu.text</item>
		<item name="android:textSize">@dimen/sp_12</item>
	</style>
	
	
	<style name="ReadTextAppearance.Read.BottomMenu.Button"
		parent="ReadTextAppearance.Read.BottomMenu">
		<item name="android:textColor">@color/color_black_ff666666</item>
		<item name="android:textSize">@dimen/text_size_11</item>
		<item name="android:gravity">center_horizontal|bottom</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
	</style>
	
	
	<style name="ReadTextAppearance.File"/>
	<style name="ReadTextAppearance.File.Tag">
		<item name="android:layout_width">38dp</item>
		<item name="android:layout_height">18dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>
</resources>