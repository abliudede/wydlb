<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.panpf.sketch.SketchImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/large_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:scaleType="fitCenter"></me.panpf.sketch.SketchImageView>

    <com.wydlb.first.view.loadding.LoadingView
    android:id="@+id/img_loading_view"
    android:layout_gravity="center"
    app:ring_style="round"
    android:visibility="gone"
    app:progress_style="linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</FrameLayout>