<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StatusBarTintStyle"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/ll_actionbar" layout="@layout/common_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_data" android:layout_below="@+id/ll_actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView android:id="@+id/tv_empty"
        android:visibility="gone"
        android:drawableTop="@mipmap/v2_empty_book_store"
        android:text="当前书架是空的哦~"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/normal_text_size"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>