<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text_color"
    >
    <ImageView android:id="@+id/iv_empty"
        android:layout_centerInParent="true"
        android:src="@mipmap/disconnect_network_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="1px"/>
    <TextView android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:layout_below="@+id/view1"
        android:text="@string/disconnect_network_title" android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/normal_text_size"
        android:alpha="0.6"
        android:gravity="center"/>

    <TextView android:id="@+id/tv_try_again" android:layout_below="@+id/tv_empty"
        android:layout_width="120dp"
        android:background="@drawable/try_again_btn_bg"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue_color"
        android:gravity="center"
        android:textSize="@dimen/normal_text_size"
        android:layout_marginTop="30dp"
        android:text="@string/click_try_again"
        android:layout_height="40dp" />
</RelativeLayout>