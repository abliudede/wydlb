<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_dialog_parent"
    >

    <LinearLayout
        android:id="@+id/body_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/white_corner_card"
        android:orientation="vertical">
        
        <TextView android:id="@+id/tv_cache_50"
            android:textColor="@color/color_black_ff333333"
            android:text="缓存后面50章"
            android:background="@drawable/bottom_line_bg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <TextView android:id="@+id/tv_cache_last_all"
            android:textColor="@color/color_black_ff333333"
            android:text="缓存后面全部章节"
            android:background="@drawable/bottom_line_bg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <TextView android:id="@+id/tv_cache_all"
            android:textColor="@color/color_black_ff333333"
            android:text="缓存整本小说"
            android:background="@drawable/bottom_line_bg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <TextView android:id="@+id/tv_cancel"
            android:textColor="@color/color_black_ff333333"
            android:text="取消"
            android:background="@drawable/shape_gray_bottomyuanjiao"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp" />


    </LinearLayout>


</RelativeLayout>
