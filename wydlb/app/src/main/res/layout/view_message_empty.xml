<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text_color"
    >
    <ImageView android:id="@+id/iv_empty"
        android:layout_centerInParent="true"
        android:src="@mipmap/empty_message_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="1px"/>
    <TextView android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:layout_below="@+id/view1"
         android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/normal_text_size"
        android:alpha="0.6"
        android:gravity="center"/>
</RelativeLayout>