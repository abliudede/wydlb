<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="wrap_content" android:minWidth="120dp" android:layout_gravity="center"
    android:layout_height="wrap_content"  android:background="@drawable/toast_gradient_bg" >

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_status"
        android:src="@mipmap/v2_icon_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Toast"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

</LinearLayout>
