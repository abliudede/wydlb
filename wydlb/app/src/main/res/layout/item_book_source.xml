<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_source_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_source_date"
         android:layout_toRightOf="@+id/tv_source_site"
        android:layout_alignBottom="@+id/tv_source_site"
        android:textSize="@dimen/small_text_size"
        android:layout_marginLeft="15dp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/tv_source_site"
        android:layout_toLeftOf="@+id/iv_status"
        android:layout_alignLeft="@+id/tv_source_site"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_source_chapter"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_not_selected"
        android:layout_height="wrap_content" />

</RelativeLayout>