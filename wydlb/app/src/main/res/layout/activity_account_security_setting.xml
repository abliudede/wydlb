<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    style="@style/StatusBarTintStyle"
    android:layout_height="match_parent">

    <include layout="@layout/common_title"/>

    <TextView android:id="@+id/tv_edit_login_password"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/item_white_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="更改登录密码"
        android:drawableRight="@mipmap/v2_icon_find_arrow_right"
        android:textColor="@color/second_text_color"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView android:id="@+id/tv_edit_payment_password"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/item_white_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="更改支付密码"
        android:drawableRight="@mipmap/v2_icon_find_arrow_right"
        android:textColor="@color/second_text_color"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView android:id="@+id/tv_bind_account_setting"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/item_white_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="账号绑定设置"
        android:drawableRight="@mipmap/v2_icon_find_arrow_right"
        android:textColor="@color/second_text_color"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/rl_nopassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_white_selector"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="小额免密支付"
            android:textColor="@color/second_text_color" />

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/v2_icon_find_arrow_right"
            />

        <View
            android:id="@+id/view_red"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_toLeftOf="@id/iv_arrow_right"
            android:layout_centerVertical="true"
            android:background="@drawable/dot_red_bg"
            android:layout_marginRight="8dp"
            />

    </RelativeLayout>
</LinearLayout>