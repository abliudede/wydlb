<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/bg_not_login_chasing"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/view_not_login_content"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="180dp">
        <TextView android:id="@+id/tv_title"
            android:textSize="@dimen/text_size_26"
            android:text="您还未登录"
            android:layout_centerHorizontal="true"
            android:textColor="@color/normal_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv_tip" android:layout_below="@+id/tv_title"
            android:textSize="@dimen/normal_text_size"
            android:text="登录后才能查看相关内容"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/second_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView android:id="@+id/tv_to_login"  android:layout_below="@+id/view_not_login_content"
        android:textSize="@dimen/normal_text_size"
        android:text="去登录"
        android:layout_margin="20dp"
        android:gravity="left|center"
        android:paddingLeft="15dp" android:paddingRight="10dp"
        android:background="@drawable/gradient_bg"
        android:drawableRight="@mipmap/icon_white_arrow_right"
        android:drawablePadding="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>