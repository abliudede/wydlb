<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/white_corner_card"
        >
        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:src="@mipmap/jinzuan_bg"
            android:scaleType="fitXY"/>

        <FrameLayout
            android:id="@+id/ly_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="172dp"
            android:orientation="vertical"
            android:layout_margin="2dp">


        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_ad_jinzuan"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ly_ad"
            android:layout_marginTop="-44dp"
            />


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:layout_below="@id/ly_ad"
            android:gravity="center"
            android:text= "任务完成，恭喜获得"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ly_show_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/title_tv">

            <LinearLayout
                android:id="@+id/ly_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal">


                <TextView
                    android:id="@+id/amount_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/chengse_text_color"
                    android:textSize="@dimen/text_size_32"
                    android:layout_centerInParent="true"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/five_text_color"
                    android:text="推荐票"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/amount_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/chengse_text_color"
                    android:textSize="@dimen/text_size_32"
                    android:paddingBottom="2dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/five_text_color"
                    android:text="金币"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/amount_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/chengse_text_color"
                    android:textSize="@dimen/text_size_32"
                    android:paddingBottom="2dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/five_text_color"
                    android:text="阅券"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ly_show_des"
            android:layout_marginTop="22dp">

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:background="@drawable/shape_gray_bottomyuanjiao2"
                android:gravity="center"
                android:text="倒计时"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_know_it"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:background="@drawable/left_right_bottom_bg_corner_chengse"
                android:gravity="center"
                android:text="收入囊中"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                android:visibility="gone"/>

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>