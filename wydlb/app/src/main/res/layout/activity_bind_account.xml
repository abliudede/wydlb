<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StatusBarTintStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include  android:id="@+id/action_bar" layout="@layout/common_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.6"
        android:padding="10dp"
        android:text="@string/bind_account_tip"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/normal_text_size" />

    <LinearLayout
        android:id="@+id/tv_bind_phone"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/item_white_selector"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:gravity="left|center" android:visibility="visible"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/icon_bind_phone"
            android:paddingTop="7dp"
            android:drawablePadding="10dp"
            android:text="手机号"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/tv_bind_phone_status"
            android:text="未绑定"
            android:textSize="@dimen/sp_14"
            android:layout_margin="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/third_text_color"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:background="@color/colorf5f5f5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/tv_bind_wx"
        android:background="@drawable/item_white_selector"
        android:clickable="true" android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/icon_bind_wx"
            android:paddingTop="7dp"
            android:drawablePadding="10dp"
            android:text="微信"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/tv_bind_wx_status"
            android:textSize="@dimen/sp_14"
            android:layout_margin="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/third_text_color"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未绑定"/>

    </LinearLayout>


</LinearLayout>
