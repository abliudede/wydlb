<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/top_corner_bg_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
       >

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="共0条回复"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/v2_icon_dialog_close" />

            <TextView
                android:id="@+id/tv_show_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看原内容"
                android:background="@drawable/gray_corner_bg_f1f1f1"
                android:padding="5dp"
                android:layout_toLeftOf="@id/img_back"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_13"/>

        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorf5f5f5"
            android:layout_below="@+id/rl_title"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_creatquanzi_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"

            android:layout_below="@+id/view_line"
             />


        <LinearLayout
            android:id="@+id/ll_bootom_view"
            style="@style/ShadowStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="16dp"
            android:paddingTop="11dp">


            <com.wydlb.first.view.CommentEditText
                android:id="@+id/ed_reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gray_bg1"
                android:hint="我也来说一句..."
                android:maxLength="500"
                android:minHeight="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/normal_text_color"
                android:textColorHint="@color/colorbbbbbb"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="发送"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>