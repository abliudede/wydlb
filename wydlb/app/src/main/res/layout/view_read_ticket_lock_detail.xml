<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/white_corner_card"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_date"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/third_text_color"
        android:text="2018年10月11日申请"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/v2_blue_color"
        android:text="0.0%"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar android:id="@+id/progress_bar"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_date"
        style="@style/ReadLockProgressBar"
        android:layout_width="match_parent"
        android:progress="10"
        android:max="100"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/progress_bar"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_lock_amount"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/third_text_color"
        android:text="已解锁 1040"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignBottom="@+id/tv_lock_amount"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_total_amount"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/third_text_color"
        android:text="总量 3040"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>