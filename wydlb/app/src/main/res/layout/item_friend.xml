<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
   >


    <com.lianzai.reader.view.SelectableRoundedImageView
        android:id="@+id/iv_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        app:sriv_left_bottom_corner_radius="5dp"
        app:sriv_left_top_corner_radius="5dp"
        app:sriv_right_bottom_corner_radius="5dp"
        app:sriv_right_top_corner_radius="5dp"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/click_tv"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:textColor="@color/white_text_color"
        android:textSize="@dimen/text_size_12"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:background="@drawable/blue_15dpconor_bg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:text="领取奖励"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/text_size_16"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_logo"
        android:layout_toLeftOf="@id/click_tv"
        android:layout_marginTop="23dp"
        android:text="关注一个圈子"
         />

    <LinearLayout
        android:id="@+id/award_ly"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_below="@id/iv_logo"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        >

        <TextView
            android:id="@+id/tv_amount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/third_text_color"
            android:textSize="@dimen/text_size_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@mipmap/get_reward"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/tv_amount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/third_text_color"
            android:textSize="@dimen/text_size_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@drawable/f5f5f5_9dpcorner_card"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            />


        <TextView
            android:id="@+id/tv_amount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/text_size_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@drawable/jianbian_chengse_corner_card_9dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.2"
            />





    </LinearLayout>






    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selectgray"
        android:layout_below="@id/award_ly"
        android:layout_marginTop="15dp"
       />

</RelativeLayout>