<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_topcorner_bg_f5f5f5"
    >

    <TextView
        android:id="@+id/tv_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动投票设置"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/black"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginRight="16dp"
        android:src="@mipmap/mine_ad_close"/>

    <RelativeLayout
        android:id="@+id/rl_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/white_corner_card"
        android:layout_below="@id/tv_tit"
        android:layout_marginTop="13dp"
        >

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@mipmap/icon_clear_edittext"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_below="@id/tv_count"
            android:visibility="visible" />

        <EditText
            android:id="@+id/ed_search_keyword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:maxLength="8"
            android:singleLine="true"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/text_size_48"
            android:layout_below="@id/tv_count"
            android:layout_toLeftOf="@id/iv_clear"
            android:inputType="number"
            />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color"
            android:layout_below="@id/ed_search_keyword"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/tv_day_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line"
            android:text="今日可投推荐票剩余 张"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"/>
        

    </RelativeLayout>

    
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/rl_white"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/blue_corner_bg_24dp"
        android:text="保存修改"
        android:textColor="@color/white_text_color"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"

        />


</RelativeLayout>