<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16"
                android:text="@string/enteramount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView android:id="@+id/img_back"
                android:src="@mipmap/v2_icon_dialog_close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_creatquanzi_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />


        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="52dp"
            android:scrollbars="vertical"
            android:background="@drawable/gray_bg"
            android:textSize="@dimen/normal_text_size"
            android:paddingLeft="15dp"
            android:hint="@string/enteramount"
            android:textColorHint="@color/fourth_text_color"
            android:textColor="@color/normal_text_color"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:inputType="number"
            android:maxLength="8"
            />


        <TextView
            android:id="@+id/tv_options"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_disable_bg"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/dashang"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            />


    </LinearLayout>

</RelativeLayout>