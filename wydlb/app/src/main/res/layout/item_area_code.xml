<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp" android:id="@+id/rl_content"
    android:background="@drawable/item_white_selector"
    android:layout_height="55dp">

    <TextView
        android:id="@+id/tv_area_name"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/normal_text_color"
        android:text="China" android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_area_code"
        android:textSize="@dimen/normal_text_size" android:layout_marginRight="30dp"
        android:textColor="@color/second_text_color"
        android:text="+86" android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>