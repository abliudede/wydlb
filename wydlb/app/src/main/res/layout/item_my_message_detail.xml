<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/white_corner_card"
    android:padding="10dp">

    <com.wydlb.first.view.CircleImageView
        android:id="@+id/iv_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_fangxing_logo"
        app:border_color="@color/white"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_logo"
        android:layout_toRightOf="@+id/iv_logo"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tv_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/gray_bg1"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_source"
        android:layout_below="@+id/tv_source"
        android:layout_marginTop="10dp"
        android:textColor="@color/third_text_color"
        android:textSize="9sp" />

    <ImageView
        android:id="@+id/iv_read_status"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/icon_red_dot" />
</RelativeLayout>