<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="68dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
  >

    <com.lianzai.reader.view.SelectableRoundedImageView
        android:id="@+id/iv_member_logo"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        app:sriv_left_bottom_corner_radius="5dp"
        app:sriv_left_top_corner_radius="5dp"
        app:sriv_right_bottom_corner_radius="5dp"
        app:sriv_right_top_corner_radius="5dp"
        android:layout_margin="6dp"/>

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_below="@+id/iv_member_logo"
        android:maxLines="1"
        android:gravity="center"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:text="连载神器"
        android:textColor="@color/five_text_color"
        android:textSize="@dimen/text_size_12"/>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="17dp"
        android:layout_height="17dp"
       android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/im_chat_room_admin1"
        android:visibility="visible"
        />
</RelativeLayout>