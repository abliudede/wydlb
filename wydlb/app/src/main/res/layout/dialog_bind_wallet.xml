<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/tv_cancel"
        android:layout_width="25dp"
        android:layout_height="62dp"
        android:src="@mipmap/close"
        android:layout_gravity="right"
        />

    <LinearLayout
        android:id="@+id/body_ly"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/white_corner_card"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="绑定BTZ钱包"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/text_size_18"
             />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/TextPaddingStyle"
            android:text="首次使用划转功能，需要绑定BTZ钱包账号，后续连载钱包的阅点都将划转至该BTZ账号，并转化为BTZ钱包内的对应资产。"
            android:textColor="#373845"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/TextPaddingStyle"
            android:text="账号一旦绑定就无法更改，请确认后再进行绑定操作。"
            android:textColor="#FE3838"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:clickable="true"
            android:gravity="center"
            android:text="前往绑定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_blue_bottomyuanjiao"/>


    </LinearLayout>




</LinearLayout>
