<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--点赞-->
    <LinearLayout
        android:id="@+id/ll_operation_praise"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_operation_praise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_dynamic_not_praise" />

        <TextView
            android:id="@+id/tv_operation_praise"
            style="@style/DynamicText_13_999999"
            android:layout_marginLeft="6dp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!--评论-->
    <LinearLayout
        android:id="@+id/ll_operation_comment"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ll_operation_praise"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_operation_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dynamic_comment" />

        <TextView
            android:id="@+id/tv_operation_comment"
            style="@style/DynamicText_13_999999"
            android:layout_marginLeft="6dp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!--分享-->

    <ImageView
        android:id="@+id/iv_operation_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ll_operation_comment"
        android:src="@mipmap/icon_dynamic_share_gray"
        android:visibility="gone" />

    <!--更多-->

    <ImageView
        android:id="@+id/iv_operation_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="16dp"
        android:src="@mipmap/icon_dynamic_more" />

</RelativeLayout>