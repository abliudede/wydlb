<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/tv_location1"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/sp_16"
        android:text="长沙市"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_select_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_location2"
        android:textColor="@color/color_grey_999999"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tv_location1"
        android:textSize="@dimen/text_size_13"
        android:text="湖南省"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:src="@mipmap/icon_selected_location"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/iv_select_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_no_location"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/sp_16"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="不显示位置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>