<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/white">

    <EditText
        android:layout_margin="10dp"
        android:textSize="@dimen/normal_text_size"
        android:hint="笔名/昵称/UID"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/normal_text_color"
        android:textColorHint="#FFBBBBBB"
        android:drawableRight="@mipmap/icon_search_gray"
        android:drawablePadding="10dp"
        android:background="@drawable/v2_edit_bg_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="20dp"
        android:textColor="@color/normal_text_color"
        android:text="我的UID：16660"
        android:gravity="center"
        android:textSize="@dimen/normal_text_size"
        android:paddingBottom="30dp"
        android:background="@drawable/bottom_line_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:paddingTop="20dp"
        android:textColor="@color/normal_text_color"
        android:text="添加手机通讯录好友"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:textSize="@dimen/text_size_16"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bottom_line_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="20dp"
        android:textColor="@color/normal_text_color"
        android:text="扫一扫添加好友/群"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:textSize="@dimen/text_size_16"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:padding="10dp"
        android:textSize="@dimen/normal_text_size"
        android:text="书友推荐"
        android:textColor="@color/third_text_color"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>