<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_color"
    style="@style/StatusBarTintStyle"
    android:layout_height="match_parent">

    <include android:id="@+id/action_bar" android:layout_width="match_parent" android:layout_height="@dimen/tool_bar_height" layout="@layout/common_title" android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:layout_below="@+id/action_bar"
        android:background="@drawable/white_corner_card"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/tv1"
            android:text="订单信息"
            android:textSize="@dimen/text_size_16"
            android:textColor="#424242"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv2"
            android:text="金额:"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_size_14"
            android:layout_below="@+id/tv1"
            android:layout_alignLeft="@+id/tv1"
            android:textColor="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv_value"
            android:text="0阅点"
            android:textSize="@dimen/text_size_14"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv2"
            android:textColor="#424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView android:id="@+id/tv3"
            android:text="种类:"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_size_14"
            android:layout_below="@+id/tv2"
            android:layout_alignLeft="@+id/tv1"
            android:textColor="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv_type"
            android:text="划转"
            android:textSize="@dimen/text_size_14"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv3"
            android:textColor="#424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView android:id="@+id/tv4"
            android:text="对象:"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_size_14"
            android:layout_below="@+id/tv3"
            android:layout_alignLeft="@+id/tv1"
            android:textColor="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv_account"
            android:text="BTZ账号"
            android:textSize="@dimen/text_size_14"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv4"
            android:textColor="#424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv5"
            android:text="钱包地址:"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_size_14" android:visibility="gone"
            android:layout_below="@+id/tv4"
            android:layout_alignLeft="@+id/tv1"
            android:textColor="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv_wallet_address"
            android:layout_below="@+id/tv5"
            android:background="@drawable/gray_corner_card"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" android:visibility="gone"
            android:paddingTop="10dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <TextView android:id="@+id/tv_confirm_payment"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/v2_blue_8corner_bg"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</RelativeLayout>