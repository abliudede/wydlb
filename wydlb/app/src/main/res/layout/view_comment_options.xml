<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >

    <LinearLayout
        android:id="@+id/popup_anima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:background="@drawable/comment_dialo_bg"
        android:orientation="horizontal"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/comment_reply_icon"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="6dp"
            android:text="回复"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/text_size_10"/>

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/comment_copy_icon"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="6dp"
            android:text="复制"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/text_size_10"/>

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/comment_post_icon"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="6dp"
            android:text="举报"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/text_size_10"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/comment_delete_icon"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="6dp"
            android:text="删除"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_mute_white"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="6dp"
            android:text="禁言"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone"/>


    </LinearLayout>
</RelativeLayout>