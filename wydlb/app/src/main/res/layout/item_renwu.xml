<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
   >

    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/text_size_16"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_logo"
         />

    <TextView
        android:id="@+id/tv_amount1"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@color/five_text_color"
        android:textSize="@dimen/text_size_12"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_logo"
       android:layout_below="@id/tv_desc"
        android:text="0"
        android:gravity="center_vertical"
        />

        <TextView
            android:id="@+id/tv_amount2"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textColor="@color/five_text_color"
            android:textSize="@dimen/text_size_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_amount1"
            android:layout_below="@id/tv_desc"
            android:text="0"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_amount3"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textColor="@color/five_text_color"
            android:textSize="@dimen/text_size_12"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_amount2"
            android:layout_below="@id/tv_desc"
            android:text="0"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/zhankai_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/renwu_down"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            />


    <TextView
        android:id="@+id/click_tv"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:textColor="@color/white_text_color"
        android:textSize="@dimen/text_size_12"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:background="@drawable/blue_15dpconor_bg"
        android:layout_toLeftOf="@id/zhankai_iv"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="去完成"
        />

    </RelativeLayout>

    <TextView
        android:id="@+id/more_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:background="@drawable/f5f5f5_corner_card"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding="5dp"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/five_text_color"
        android:visibility="gone"/>


</RelativeLayout>