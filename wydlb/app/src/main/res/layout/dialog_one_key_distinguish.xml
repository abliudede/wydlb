<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:id="@+id/body_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/white_corner_card"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="一键识别好友"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shibiehaoyou"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="24dp"
            style="@style/TextPaddingStyle"
            android:text="请允许连载神器访问通讯录从而使得我们在好友列表中能够展示通讯录中的姓名，我们不会发送垃圾信息给他们或存储他们的联系方式。"
            android:textColor="@color/color_black_333333"
            android:paddingLeft="10dp"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:clickable="true"
                android:gravity="center"
                android:text="立即识别"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                android:background="@drawable/shape_blue_leftbottomyuanjiao"/>

            <TextView
                android:id="@+id/tv_nomore"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_15"
                />



        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
