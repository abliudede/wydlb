<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center" android:padding="10dp" android:background="@drawable/item_white_selector"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <com.wydlb.first.view.SelectableRoundedImageView
        android:id="@+id/iv_book_cover"
        app:sriv_right_bottom_corner_radius="5dp"
        app:sriv_left_top_corner_radius="5dp"
        app:sriv_right_top_corner_radius="5dp"
        app:sriv_left_bottom_corner_radius="5dp"
        android:scaleType="centerCrop"
        android:layout_width="52dp"
        android:layout_height="70dp" />
    <TextView android:id="@+id/tv_book_name"
        android:layout_toRightOf="@+id/iv_book_cover"
        android:textColor="@color/normal_text_color"
        android:layout_marginTop="1dp"
        android:textSize="@dimen/sp_16"
        android:drawablePadding="5dp"
        android:layout_marginLeft="10dp"
        android:text="连载神器"
        style="@style/TextPaddingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_book_author"
        android:layout_alignLeft="@+id/tv_book_name"
        android:layout_below="@+id/tv_book_name"
        android:textColor="@color/color_black_ff666666"
        android:layout_marginTop="5dp"
        android:text="连载"
        android:textSize="@dimen/small_text_size"
        style="@style/TextPaddingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_book_last_chapter"
        android:layout_alignLeft="@+id/tv_book_name"
        android:layout_below="@+id/tv_book_author"
        android:textColor="@color/color_black_ff666666"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/small_text_size"
        style="@style/TextPaddingStyle"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView android:id="@+id/iv_status"
        android:visibility="gone"
        android:src="@mipmap/v2_icon_blue_selected"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>