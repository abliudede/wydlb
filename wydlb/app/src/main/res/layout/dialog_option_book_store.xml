<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/white_corner_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:text="您想对该书进行什么操作？"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/color_black_ff999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="10dp"
            style="@style/LineHStyle"/>

        <TextView  android:id="@+id/tv_book_delete"
            android:layout_gravity="center"
            android:text="删除"
            android:padding="13dp"
            android:background="@drawable/item_white_selector"
            android:clickable="true"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/color_red_FF4343"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View style="@style/LineHStyle"/>

        <TextView  android:id="@+id/tv_close"
            android:layout_gravity="center"
            android:background="@drawable/item_white_selector"
            android:clickable="true"
            android:text="取消"
            android:padding="13dp"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/color_black_ff999999"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
</RelativeLayout>