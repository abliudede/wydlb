<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    style="@style/StatusBarTintStyle"
    android:layout_height="match_parent">

    <include layout="@layout/common_title"/>

    <ImageView android:id="@+id/iv_about_us"
        android:layout_marginTop="40dp"
        android:src="@mipmap/icon_v2_about_us_logo"
        android:layout_gravity="center_horizontal"
        android:layout_width="110dp"
        android:layout_height="110dp" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lianzaishenqi_text"
        />

    <TextView android:id="@+id/tv_version"
        android:text="版本号：3.2.0"
        android:textSize="@dimen/small_text_size"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_split_line_cccccc"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <View
        android:layout_marginTop="40dp"
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView android:id="@+id/tv_share"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:clickable="true"
        android:background="@drawable/item_white_selector"
        android:gravity="center_vertical"
        android:text="分享给朋友"
        android:drawableRight="@mipmap/v2_icon_find_arrow_right"
        android:textColor="@color/second_text_color"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_kefu"
        android:background="@drawable/item_white_selector"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_kefu"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:gravity="center_vertical"
            android:text="客服微信"
            android:textColor="@color/second_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView  android:id="@+id/tv_kefu_value" android:layout_toRightOf="@+id/tv_kefu"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="readkefumomo"
            android:textColor="@color/second_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>