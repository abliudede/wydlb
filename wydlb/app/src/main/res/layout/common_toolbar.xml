<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <com.wydlb.first.view.RxToolBar
        android:id="@+id/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        >
        <RelativeLayout android:id="@+id/content_view"  android:background="@color/white_text_color"
            android:layout_width="match_parent" android:layout_height="@dimen/tool_bar_height">
            <ImageView   android:id="@+id/img_back"
                android:layout_width="@dimen/back_icon_size"  android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" android:layout_marginLeft="10dp" android:background="@mipmap/icon_back"
                android:layout_height="@dimen/back_icon_size" />
            <TextView android:id="@+id/tv_commom_title"
                android:layout_width="wrap_content" android:layout_centerInParent="true"
                android:gravity="center" android:singleLine="true" android:ellipsize="end"
                android:textSize="@dimen/title_size" android:paddingLeft="3dp" android:paddingRight="3dp"
                android:textColor="@color/normal_text_color"
                android:layout_height="match_parent" />

            <TextView android:id="@+id/tv_options"
                android:layout_width="wrap_content" android:layout_centerInParent="true"
                android:gravity="center" android:layout_alignParentRight="true" android:layout_marginRight="10dp"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/blue_color"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </com.wydlb.first.view.RxToolBar>
</merge>