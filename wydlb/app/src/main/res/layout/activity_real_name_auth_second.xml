<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StatusBarTintStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/v2_blue_color"
            >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/back_icon_size"
                android:layout_height="@dimen/back_icon_size"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/v2_icon_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="实名认证"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_real_name_auth_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/upload_photo_tip"
                    android:textColor="@color/darker_gray"
                    android:textSize="@dimen/normal_text_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_corner_card"
                        android:gravity="left|center"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/iv_verified_idcard1"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/verified_idcard1_bg" />

                        <TextView
                            android:id="@+id/tv_verified_idcard1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/iv_verified_idcard1"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_verified_idcard1"
                            android:text="@string/id_card_positive_title"
                            android:textColor="@color/black_text_color"
                            android:textSize="@dimen/big_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv_verified_idcard1_title"
                            android:layout_below="@+id/tv_verified_idcard1_title"
                            android:layout_marginTop="10dp"
                            android:text="@string/id_card_positive_des"
                            android:textColor="@color/darker_gray"
                            android:textSize="@dimen/small_text_size" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/view_positive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/white_corner_card"
                        android:gravity="left|center"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/iv_verified_idcard2"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/verified_idcard2_bg" />

                        <TextView
                            android:id="@+id/tv_verified_idcard2_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/iv_verified_idcard2"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_verified_idcard2"
                            android:text="@string/id_card_opposite_title"
                            android:textColor="@color/black_text_color"
                            android:textSize="@dimen/big_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv_verified_idcard2_title"
                            android:layout_below="@+id/tv_verified_idcard2_title"
                            android:layout_marginTop="10dp"
                            android:text="@string/id_card_opposite_des"
                            android:textColor="@color/darker_gray"
                            android:textSize="@dimen/small_text_size" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/white_corner_card"
                        android:gravity="left|center"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/iv_verified_idcard3"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/verified_idcard3_bg" />

                        <TextView
                            android:id="@+id/tv_verified_idcard3_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/iv_verified_idcard3"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/iv_verified_idcard3"
                            android:text="@string/id_card_hand_title"
                            android:textColor="@color/black_text_color"
                            android:textSize="@dimen/big_text_size" />

                        <TextView
                            android:id="@+id/tv_hand_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv_verified_idcard3_title"
                            android:layout_below="@+id/tv_verified_idcard3_title"
                            android:layout_marginTop="10dp"
                            android:text="@string/id_card_hand_des"
                            android:textColor="@color/darker_gray"
                            android:textSize="@dimen/small_text_size" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/verified_example1_bg" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:drawableLeft="@mipmap/icon_verified_correct"
                                android:drawablePadding="2dp"
                                android:text="@string/upload_right"
                                android:textColor="@color/darker_gray"
                                android:textSize="@dimen/small_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/verified_example2_bg" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:drawableLeft="@mipmap/icon_verified_error"
                                android:drawablePadding="2dp"
                                android:text="@string/upload_error_tip1"
                                android:textColor="@color/darker_gray"
                                android:textSize="@dimen/small_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/verified_example3_bg" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:drawableLeft="@mipmap/icon_verified_error"
                                android:drawablePadding="2dp"
                                android:text="@string/upload_error_tip2"
                                android:textColor="@color/darker_gray"
                                android:textSize="@dimen/small_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/verified_example3_bg" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/icon_verified_error"
                                android:drawablePadding="2dp"
                                android:text="@string/upload_error_tip3"
                                android:textColor="@color/darker_gray"
                                android:textSize="@dimen/small_text_size" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <Button android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:textAllCaps="false"
                    android:background="@drawable/gradient_bg"
                    android:text="@string/upload_photo_submit"
                    android:textColor="@color/white_text_color"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>