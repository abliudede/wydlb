<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
<com.wydlb.first.view.SelectableRoundedImageView
    app:sriv_right_top_corner_radius="5dp"
    app:sriv_right_bottom_corner_radius="5dp"
    app:sriv_left_top_corner_radius="5dp"
    app:sriv_left_bottom_corner_radius="5dp"
    android:id="@+id/iv_add_img"
    android:layout_marginTop="5dp"
    android:scaleType="center"
    android:layout_width="60dp"
    android:layout_height="60dp" />


    <ImageView android:id="@+id/iv_close"
        android:layout_alignRight="@+id/iv_add_img"
        android:layout_alignTop="@+id/iv_add_img"
        android:src="@mipmap/icon_remove_picture"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</RelativeLayout>