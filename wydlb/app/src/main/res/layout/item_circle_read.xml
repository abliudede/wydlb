<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="28dp"
    >

    <com.lianzai.reader.view.SelectableRoundedImageView
        android:id="@+id/iv_dynamic_book_cover"
        android:layout_width="75dp"
        android:layout_height="99dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        app:sriv_left_bottom_corner_radius="4dp"
        app:sriv_left_top_corner_radius="4dp"
        app:sriv_right_bottom_corner_radius="4dp"
        app:sriv_right_top_corner_radius="4dp" />

    <ImageView
        android:id="@+id/gongxiangbanquan_jiaobiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gongxiangbanquan_jiaobiao"
        android:layout_alignTop="@id/iv_dynamic_book_cover"
        android:layout_alignLeft="@id/iv_dynamic_book_cover"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_dynamic_book_cover"
        android:layout_alignLeft="@+id/iv_dynamic_book_cover"
        android:layout_marginLeft="7dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_person_count"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:background="@drawable/black_biaoqian_bottom_round"
        android:layout_alignBottom="@+id/iv_dynamic_book_cover"
        android:layout_alignLeft="@+id/iv_dynamic_book_cover"
        android:layout_alignRight="@+id/iv_dynamic_book_cover"
        android:gravity="center"
        android:textColor="@color/white_text_color"
        android:textSize="@dimen/text_size_10"/>


    <TextView
        android:id="@+id/tv_dynamic_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_dynamic_book_cover"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv_dynamic_book_cover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_dynamic_book_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_dynamic_book_title"
        android:layout_below="@+id/tv_dynamic_book_title"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/normal_text_color"/>

    <TextView
        android:id="@+id/tv_dynamic_book_descontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_dynamic_book_title"
        android:layout_below="@+id/tv_dynamic_book_description"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/third_text_color"/>

</RelativeLayout>