<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    style="@style/StatusBarTintStyle"
    android:layout_height="match_parent">

    <include layout="@layout/common_title"/>


    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@mipmap/icon_v2_withdraw_read_coin_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:text="划转成功"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="20dp"
        android:textColor="@color/normal_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_result"
        android:gravity="center"
        android:textColor="@color/color_black_ff666666"
        android:textSize="@dimen/normal_text_size"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_close"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:text="完成"
        android:background="@drawable/v2_blue_8corner_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>