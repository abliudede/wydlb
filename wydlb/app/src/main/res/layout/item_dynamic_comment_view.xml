<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wydlb.first.view.CircleImageView
        android:id="@+id/civ_dynamic_comment_user_logo"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/default_fangxing_logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:border_color="@color/transparent"
        app:border_width="1dp" />

    <com.wydlb.first.view.EllipsizeTextView
        android:id="@+id/tv_dynamic_user_comment"
        style="@style/DynamicText_13_333333"
        android:layout_marginLeft="4dp"
        android:lineSpacingExtra="1dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:layout_toRightOf="@+id/civ_dynamic_comment_user_logo"
        />

</RelativeLayout>