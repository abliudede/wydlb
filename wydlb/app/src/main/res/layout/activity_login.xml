<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StatusBarTintStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_bg_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_top_bg" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/big_white_close"
        android:padding="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_bg_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_new_login"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:drawableBottom="@mipmap/white_sanjiao"
            android:gravity="center"
            android:singleLine="true"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_new_register"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_parent_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_bg_top"
        android:visibility="visible"
        >

        <RelativeLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_bg">

            <TextView
                android:id="@+id/login_account"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:gravity="left|center_vertical"
                android:text="@string/login_account"
                android:textColor="@color/third_text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_login_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/login_account"
                android:background="@null"
                android:gravity="left|center"
                android:hint="@string/login_phone_hint"
                android:inputType="number"
                android:textColorHint="@color/darker_gray"
                android:textSize="@dimen/normal_text_size" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_bg">

            <TextView
                android:id="@+id/login_pwd"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:gravity="left|center_vertical"
                android:text="@string/login_pwd"
                android:textColor="@color/third_text_color"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/ed_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/login_pwd"
                android:background="@null"
                android:gravity="left|center"
                android:hint="@string/login_pwd_hint"
                android:inputType="textPassword"
                android:textColorHint="@color/darker_gray"
                android:textSize="@dimen/normal_text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/view2"
            android:background="@drawable/edit_bg"
            android:visibility="gone">

            <TextView
                android:id="@+id/quicklogin_account"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:gravity="left|center_vertical"
                android:text="@string/login_sms"
                android:textColor="@color/third_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/quicklogin_get_sms_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/text_size_14"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>

            <EditText
                android:id="@+id/ed_quicklogin_sms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/quicklogin_account"
                android:layout_toLeftOf="@+id/quicklogin_get_sms_tv"
                android:background="@null"
                android:gravity="left|center"
                android:hint="@string/login_sms_hint"
                android:inputType="number"
                android:textColorHint="@color/darker_gray"
                android:textSize="@dimen/normal_text_size"
                android:maxLength="8"/>

        </RelativeLayout>


        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_disable_bg"
            android:enabled="false"
            android:text="@string/login_title"
            android:textAllCaps="false"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/normal_text_size" />


        <TextView
            android:id="@+id/tv_quick_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_btn"
            android:layout_alignLeft="@id/login_btn"
            android:layout_marginTop="15dp"
            android:text="验证码登录"
            android:textColor="@color/bluetext_color"
            android:textSize="@dimen/normal_text_size"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_btn"
            android:layout_alignRight="@id/login_btn"
            android:layout_marginTop="15dp"
            android:text="@string/forget_login_pwd"
            android:textColor="@color/bluetext_color"
            android:textSize="@dimen/normal_text_size"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/icon_wechat"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_wechat"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@color/line_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/line"
                android:gravity="center"
                android:text="其他登录方式"
                android:textColor="@color/third_text_color"
                android:textSize="@dimen/small_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@color/line_bg" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_parent_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_bg_top"
        android:visibility="gone"
       >

        <RelativeLayout
            android:id="@+id/registerview1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_bg">

            <TextView
                android:id="@+id/register_account"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+86"
                android:textColor="@color/normal_text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_register_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/register_account"
                android:background="@null"
                android:gravity="left|center"
                android:hint="@string/login_phone_hint"
                android:inputType="number"
                android:textColorHint="@color/darker_gray"
                android:textSize="@dimen/normal_text_size" />

        </RelativeLayout>


        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/registerview1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_disable_bg"
            android:enabled="false"
            android:text="获取验证码"
            android:textAllCaps="false"
            android:textColor="@color/white_text_color"
            android:textSize="@dimen/normal_text_size" />


        <LinearLayout
            android:id="@+id/ll_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_btn"
            android:layout_gravity="left|center"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp">

            <CheckBox
                android:id="@+id/cb_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/cb_agreement"
                android:checked="true" />

            <TextView
                android:id="@+id/tv_link_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="已阅读并同意《连载神器用户协议》"
                android:textColor="@color/third_text_color"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>