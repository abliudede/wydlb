<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        >

    <ImageView
        android:id="@+id/red_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/newred_bg"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/red_bg"
        android:text="恭喜您获得一个新人礼包"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开得10元"
        android:layout_below="@id/title_tv"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_32"
        android:layout_marginTop="4dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/amount_tv"
        android:layout_alignBottom="@id/amount_tv"
        android:layout_toRightOf="@id/amount_tv"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="7dp"
        android:textSize="@dimen/text_size_10"
        android:text="@string/mosthigh"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="#FE2237"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "仅限新注册用户领取"
        android:layout_alignBottom="@id/red_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:textSize="@dimen/text_size_14"
        android:textColor="#D61023"/>

    <TextView
        android:id="@+id/xianquguangguang_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/red_bg"
        android:text="先去逛逛"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/corner_0a0a0a_card"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"/>


</RelativeLayout>

</RelativeLayout>