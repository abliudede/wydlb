<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="随便看看 >"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginTop="28dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textColor="@color/third_text_color"/>


    <ImageView
        android:id="@+id/iv_about_us"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:src="@mipmap/icon_v2_about_us_logo"
        android:scaleType="centerCrop"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@mipmap/lianzaishenqi_text" />


    <ImageView
        android:id="@+id/login_text_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:text="发现好小说"-->
        <!--android:textColor="@color/third_text_color"-->
        <!--android:textSize="@dimen/text_size_14" />-->

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>



    
    <ImageView
        android:id="@+id/rl_wx_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/button_wx_login"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        >


    </ImageView>
    


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即表明你同意相关的"
            android:textColor="@color/third_text_color"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_link_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:text="《连载神器用户协议》"
            android:textColor="@color/bluetext_color"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>



</LinearLayout>