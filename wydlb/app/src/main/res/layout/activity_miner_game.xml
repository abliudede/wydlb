<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StatusBarTintStyle"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.lianzai.reader.view.miner.MinerMainView
        android:id="@+id/miner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView android:id="@+id/tv_mineral"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/white" android:padding="10dp"
        android:gravity="left|center"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/icon_mineral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/tv_calculating_force"
         android:padding="10dp"
        android:textSize="@dimen/small_text_size"
        android:textColor="#F8E71C"
        android:gravity="left|center"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/icon_calculating_force"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true" android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" />


    <TextView android:id="@+id/tv_miner_car"
        android:layout_below="@+id/tv_mineral"
        android:padding="10dp"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/white"
        android:drawableLeft="@mipmap/icon_miner_car"
        android:gravity="left|center"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tv_miner_car"
        android:background="@drawable/bg_task_list"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:id="@+id/rv_friends"
        />



</RelativeLayout>