<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/StatusBarTintStyle">
    <include layout="@layout/common_title" android:id="@+id/title_bar"/>


    <RelativeLayout
        android:background="@mipmap/v2_wallet_recharge_bg"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tv1"
            android:text="@string/wallet_recharge_tip1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_18"
            android:gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/ed_recharge_code"
            android:layout_width="match_parent"
            android:background="@drawable/v2_edit_bg"
            android:padding="3dp"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:layout_below="@+id/tv1" android:layout_marginTop="60dp"
            android:layout_height="45dp" />

        <TextView android:layout_below="@+id/ed_recharge_code"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_alignLeft="@+id/ed_recharge_code"
            android:layout_alignRight="@+id/ed_recharge_code"
            android:text="@string/recharge_description"
            android:lineSpacingExtra="1.5dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView android:layout_margin="10dp"
        android:background="@drawable/v2_blue_5corner_bg"
        android:textColor="@color/white"
        android:text="充值"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>